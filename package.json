{
  "name": "signal-timers",
  "version": "1.0.1",
  "description": "This package provides a set of timer-related methods, enhancing `setTimeout` and `setInterval` with support for `AbortSignal`.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e7h4n/signal-timers.git"
  },
  "license": "MIT",
  "keywords": [
    "setTimeout",
    "setInterval",
    "delay",
    "requestAnimationFrame",
    "AbortController",
    "AbortSignal",
    "abortable"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "pnpm vitest",
    "build": "pnpm vite build",
    "coverage": "vitest run --coverage"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "@vitest/coverage-v8": "^2.1.1",
    "eslint": "^9.10.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.9.0",
    "happy-dom": "^15.7.4",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0",
    "vite": "^5.4.6",
    "vite-plugin-dts": "^4.2.1",
    "vitest": "^2.1.1"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/signal-timers.umd.cjs",
  "module": "./dist/signal-timers.js",
  "exports": {
    ".": {
      "import": "./dist/signal-timers.js",
      "require": "./dist/signal-timers.umd.cjs"
    }
  }
}